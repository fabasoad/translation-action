{
  "clearMocks": true,
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/*.d.ts",
    "!**/node_modules/**"
  ],
  "coverageReporters": [
    "lcov", "text", "text-summary"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 25,
      "functions": 45,
      "lines": 40,
      "statements": 40
    }
  },
  "moduleFileExtensions": [
    "js",
    "ts"
  ],
  "moduleNameMapper": {
    "^@actions/(.*)$": "<rootDir>/node_modules/@actions/$1"
  },
  "testEnvironment": "node",
  "testMatch": [
    "**/*.spec.ts"
  ],
  "testRunner": "jest-circus/runner",
  "testTimeout": 20000,
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", {
      "useESM": true
    }],
    "^.+\\.jsx?$": ["ts-jest", {
      "useESM": true
    }]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(@actions)/)"
  ],
  "verbose": true
}
