{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    },
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "src/__tests__"]
}
